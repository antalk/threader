<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
      
      <t:if test="messageSelected">
      	<t:ProgressiveDisplay/>
      	<p:else>
      		No message selected
      	</p:else>
      </t:if>
      
      <t:block t:id="contentBlock">
      <t:if test="message">
      	<div class="panel">
      		<div class="panel-heading bg-primary">
      			<div class="pull-left">
		      		<div class="btn-group">
		      			<t:tapisser.Modal t:event="reply" large="true">
			  				<button type="button" class="btn btn-default">Reply</button>
			  			</t:tapisser.Modal>
			  			<button type="button" class="btn btn-default">ReplyAll</button>
			  			<button type="button" class="btn btn-default">Forward</button>
			  			<t:if test="messageread">
			  				<t:eventlink t:event="markasunread" t:zone="^">
			  					<button type="button" class="btn btn-default">Mark as unread</button>
			  				</t:eventlink>
			  			</t:if>
			  			<t:eventlink t:event="deletemessage" t:zone="^">
			  				<button type="button" class="btn btn-default">Delete</button>
			  			</t:eventlink>
			  		</div>
			  	</div>
				<div class="pull-right">
					<div class="btn-group">
						<t:tapisser.Modal t:event="viewmessage" large="true">
							<button type="button" class="btn btn-default">
								<span class="glyphicon glyphicon-fullscreen"></span>
							</button>
						</t:tapisser.Modal>
					</div>
				</div>
				<div class="clearfix"/>
			</div>
			<div class="panel-body">
      			<t:beandisplay object="message" include="subject" />
      		</div>
      	</div>
	   	<div class="full-height">
	   		<t:outputraw value="messagecontent"/>
	   	<!-- 
		   	<iframe src="app/messagecontent" width="100%" height="100%" frameborder="0" scrolling="auto"/>
		   	 -->
		</div>
	   	<p:else>
	   		Message does not exist
	   	</p:else> 
	  </t:if>
	 </t:block>
	 
	 <t:block t:id="messageViewBlock">
		 <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        <t:beandisplay object="message" include="subject" t:mixins="tapisser/bootstrap"/>
	      </div>
	      <div class="modal-body full-height">
			<iframe src="app/messagecontent" width="100%" height="100%" frameborder="0" scrolling="auto"/>
	      </div>
	 </t:block>
	 
	<t:block t:id="composeBlock">
		<t:MailComposer />
	</t:block>
</html>